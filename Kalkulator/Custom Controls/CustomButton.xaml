<UserControl x:Class="Kalkulator.CustomButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kalkulator"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Name="btnCustom">
   
    <!-- Custom button with an image inside it -->
    <Button Click="Button_Click" Style="{StaticResource CustomButtonStyle}" Focusable="False">
        <WrapPanel>
            <Image Source="{Binding ElementName=btnCustom, Path=ImageSource}"/>
        </WrapPanel>
    </Button>
</UserControl>
