<UserControl x:Class="Kalkulator.Monitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kalkulator"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Name="txtMonitor">
    <!-- Custom Display -->    
    <Border Style="{StaticResource MonitorBorderTheme}">
        
        <!-- Only text block here -->
        <TextBlock Style="{StaticResource MonitorTheme}" Text="{Binding Text, ElementName=txtMonitor}"
        TextAlignment="{Binding TextAlignment, ElementName=txtMonitor}" Focusable="False"/>
        
    </Border>
</UserControl>
